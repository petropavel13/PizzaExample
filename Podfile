source 'https://github.com/CocoaPods/Specs'
source "https://github.com/TouchInstinct/Podspecs.git"

platform :ios, '11.2'

inhibit_all_warnings!

target 'PizzaExample' do
  use_frameworks!

  pod 'LeadKit', :git => 'https://github.com/TouchInstinct/LeadKit', :branch => 'feature/data_loading_and_pagination_wrapper'
  pod 'FlexLayout'
  pod 'PinLayout'
  pod 'Nuke'

end

target 'PizzaUI' do
  use_frameworks!

  pod 'LeadKit', :git => 'https://github.com/TouchInstinct/LeadKit', :branch => 'feature/data_loading_and_pagination_wrapper'
  pod 'FlexLayout'
  pod 'PinLayout'
  pod 'Nuke'

end
